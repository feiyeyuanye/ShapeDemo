<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--边框阴影-->
    <!--最外层-->
    <item  android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="32dp">
        <shape android:shape="rectangle">
            <solid android:color="#20FF4081" />
            <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp"/>
        </shape>
    </item>
    <item  android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="32dp">
        <shape android:shape="rectangle">
            <solid android:color="#40FF4081" />
            <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp"/>
        </shape>
    </item>
    <!--最内层-->
    <item  android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="32dp">
        <shape android:shape="rectangle">
            <solid android:color="#60FF4081" />
            <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp"/>
        </shape>
    </item>
    <!--内容区-->
    <item  android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</layer-list>